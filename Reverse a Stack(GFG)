class Solution {
public:
    void insertAtBottom(stack<int> &st, int x) {
        // Base case
        if (st.empty()) {
            st.push(x);
            return;
        }

        int topElement = st.top();
        st.pop();

        insertAtBottom(st, x);

        // Backtracking
        st.push(topElement);
    }

    void reverseStack(stack<int> &st) {
        // Base case
        if (st.empty()) {
            return;
        }

        int topElement = st.top();
        st.pop();

        // Recursive call
        reverseStack(st);

        // Insert removed element at bottom
        insertAtBottom(st, topElement);
    }
};
